<resources>

    <style name="Widget.Template.Toolbar" parent="Widget.MaterialComponents.Toolbar.Surface" />

    <style name="Widget.Template.AppBar" parent="Widget.MaterialComponents.AppBarLayout.Surface" />

    <style name="Widget.Template.Settings.PreferenceView" parent="">
        <item name="android:paddingTop">@dimen/settings_preference_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/settings_preference_padding_vertical</item>
        <item name="android:paddingStart">@dimen/settings_preference_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/settings_preference_padding_horizontal</item>

        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Widget.Template.Settings.PreferenceTitle" parent="Widget.MaterialComponents.TextView">
        <item name="singleLine">true</item>
        <item name="android:textAppearance">?attr/textAppearanceListItem</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:fadingEdge">horizontal</item>
    </style>

    <style name="Widget.Template.Settings.PreferenceSummary" parent="Widget.MaterialComponents.TextView">
        <item name="android:maxLines">4</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textAppearance">?attr/textAppearanceListItemSecondary</item>
    </style>

    <style name="Widget.Template.Settings.PreferenceGroupTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_marginStart">@dimen/settings_category_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/settings_category_margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/settings_category_margin_top</item>

        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="Widget.Template.Settings.Divider" parent="">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?attr/dividerHorizontal</item>
    </style>
</resources>
